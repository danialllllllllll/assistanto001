# .replit  ‚Üê This is the only file Replit actually reads
run = "python learning/train_advanced_ai.py"
language = "python3"
modules = ["python-3.12", "web", "nodejs-20"]

[env]
PYTHONPATH = "$PYTHONPATH:$REPL_HOME/learning"

[deployment]
# Optional: for permanent URL later
run = ["python", "learning/train_advanced_ai.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
expertMode = true

[nix]
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "systemdMinimal", "tcl", "tk", "xsimd", "zlib"]
channel = "stable-25_05"

[workflows]
runButton = "Train Whimsy AI"

[[workflows.workflow]]
name = "on Run from .replit"
mode = "parallel"
author = 22331225

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 8080"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python learning/train_advanced_ai.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python learning/*"

[[workflows.workflow]]
name = "Train Whimsy AI"
author = 22331225
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python learning/train_advanced_ai.py"
